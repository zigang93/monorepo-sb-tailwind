{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Packages",
  "include": ["."],
  "exclude": ["dist", "build", "node_modules", "bin"],
  "compilerOptions": {
    "lib": ["ES2021", "DOM"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "noEmit": true,
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
